{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "lib",
    "esm",
    "cjs",
    "ums",
    "typings"
  ]
}
